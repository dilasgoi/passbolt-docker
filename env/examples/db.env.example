# Database environment configuration
# This file defines the MariaDB/MySQL database settings for Passbolt

# Root password for MySQL/MariaDB
# Used for database administration and initial setup
# IMPORTANT: Change this to a strong, unique password
MYSQL_ROOT_PASSWORD=ChangeThisStrongRootPassword123!

# Database name that will be created for Passbolt
# Default is 'passbolt', recommended to keep this default
MYSQL_DATABASE=passbolt

# Database user that Passbolt will use to connect
# Default is 'passbolt', can be changed if needed
MYSQL_USER=passbolt

# Password for the database user
# IMPORTANT: Change this to a strong, unique password
# Must match DATASOURCES_DEFAULT_PASSWORD in passbolt.env
MYSQL_PASSWORD=ChangeThisStrongUserPassword456!

# Optional: Additional MySQL configuration
# MYSQL_RANDOM_ROOT_PASSWORD=yes     # Generate random root password (if set, MYSQL_ROOT_PASSWORD is ignored)
# MYSQL_ALLOW_EMPTY_PASSWORD=no      # Recommended to keep this as 'no'
# MYSQL_INITDB_SKIP_TZINFO=no        # Loads timezone tables, recommended for proper date handling
