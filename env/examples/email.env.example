# Email server configuration
# This file defines the email settings used by Passbolt for sending notifications

# Email transport class
# Use 'Smtp' for standard SMTP server connections
EMAIL_TRANSPORT_DEFAULT_CLASS_NAME=Smtp

# SMTP server hostname
# Examples: smtp.gmail.com, smtp.office365.com, smtp.yourdomain.com
EMAIL_TRANSPORT_DEFAULT_HOST=smtp.example.com

# SMTP server port
# Common ports: 25 (standard), 465 (SSL), 587 (TLS)
# 587 is recommended for TLS connections
EMAIL_TRANSPORT_DEFAULT_PORT=587

# SMTP username for authentication
# Usually the email address used for sending
EMAIL_TRANSPORT_DEFAULT_USERNAME=passbolt@example.com

# SMTP password
# IMPORTANT: Change this to the actual password for your SMTP account
EMAIL_TRANSPORT_DEFAULT_PASSWORD=YourSmtpPassword

# TLS encryption (recommended)
# Set to true for secure SMTP connection
EMAIL_TRANSPORT_DEFAULT_TLS=true

# SSL encryption
# Usually set to false when using TLS
# Only set to true if using port 465 with explicit SSL
EMAIL_TRANSPORT_DEFAULT_SSL=false

# From email address
# The email address that will appear in the From field
# Often needs to match the authenticated user
EMAIL_DEFAULT_FROM=passbolt@example.com

# Optional: Connection timeout in seconds
# Increase this value if you experience timeout issues
EMAIL_TRANSPORT_DEFAULT_TIMEOUT="180"

# Optional: Authentication method
# Common values: PLAIN, LOGIN, CRAM-MD5
# Most SMTP servers support LOGIN
EMAIL_TRANSPORT_DEFAULT_AUTH="LOGIN"

# Optional: Debug mode for email
# Set to true to troubleshoot email issues
# EMAIL_TRANSPORT_DEFAULT_DEBUG=false
